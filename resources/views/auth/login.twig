{% extends 'app.twig' %}
{% block content %}
<div class="flex-align-center mb5">
	<div class="row N0c">
		<h3 class="fw600 uppercase mb2 t-center">Access your account</h3>
		<form action="{{ path_for('auth.login') }}" method="POST">
			{{ csrf()|raw }}
			<label for="email" class="{{ errors.email ? 'has-error' }}">
				<span class="N0c">Your email</span>
				<input type="email" name="email" id="email" class="br5">
				{% if errors.email %}
				<span class="help-block">
					{{ errors.email | first }}
				</span>
				{% endif %}
			</label>
			<label for="password" class="{{ errors.password ? 'has-error' }}">
				<span class="N0c">Your password</span>
				<input type="password" name="password" id="password" class="br5">
				{% if errors.password %}
				<span class="help-block">
					{{ errors.password | first }}
				</span>
				{% endif %}
			</label>
			<div class="t-right">
				<button type="submit" class="btn uppercase fw600 px5 mt2" style="
					background: rgba(255,255,255,.15);
					color: #fff;
				">
					Sign in
				</button>
			</div>
		</form>
	</div>
</div>
{% endblock %}